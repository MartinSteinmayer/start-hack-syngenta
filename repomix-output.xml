                rainParticles: 0,
                cloudOpacity: 0.9,
                cloudCount: 20
            },
            [WEATHER_TYPES.CLOUDY]: {
                skyColor: 0xa3b5c7,
                fogColor: 0xc7c7c7,
                fogDensity: 0.004,
                lightIntensity: 0.6,
                ambientIntensity: 0.4,
                rainParticles: 0,
                cloudOpacity: 1.0,
                cloudCount: 30
            },
            [WEATHER_TYPES.RAINY]: {
