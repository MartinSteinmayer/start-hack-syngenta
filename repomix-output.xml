            <div className="mt-4">
              <label className="block text-sm font-medium mb-2">Or enter exact size:</label>
              <div className="flex items-center">
                <input
                  type="number"
                  min="1"
                  max="10000"
                  value={farmSize}
                  onChange={(e) => onFarmSizeChange(parseInt(e.target.value) || 1)}
